{
  "presets": [
    [ "es2015", { "loose": true, "modules": false}],
    "react",
    "stage-0",
    "stage-1",
    "flow"
  ],
  "plugins": [
    "react-hot-loader/babel",
    "dev-expression",
    "transform-decorators-legacy",
    "transform-proto-to-assign",
    [
      "transform-runtime",
      {
        "helpers": false,
        "polyfill": false
      }
    ]
  ],
  "env": {
    "test": {
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    }
  }
}

